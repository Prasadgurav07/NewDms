@section menulinks {
    <li class="nav-item">
        <a class="nav-link active" aria-current="page" href="#">Home</a>
    </li>
}

<div class="container-fluid mt-4 " >
    <!-- Operation Selectors -->
    <div class="row g-3 mb-4">
        <div class="col-lg-3 col-md-6">
            <label class="form-label fw-bold">Choose State</label>
            <select class="form-select">
                <option selected disabled>Choose State</option>
                <option value="1">StateWize</option>
                <option value="2">CCMWise</option>
                <option value="3">Delete</option>
            </select>
        </div>

        <div class="col-lg-3 col-md-6">
            <label class="form-label fw-bold">Choose Hub Manager</label>
            <select class="form-select">
                <option selected disabled>Choose Hub Manager</option>
                <option value="1">StateWize</option>
                <option value="2">CCMWise</option>
                <option value="3">Delete</option>
            </select>
        </div>

        <div class="col-lg-3 col-md-6">
            <label class="form-label fw-bold">Choose CCM</label>
            <select class="form-select">
                <option selected disabled>Choose CCM</option>
                <option value="1">StateWize</option>
                <option value="2">CCMWise</option>
                <option value="3">Delete</option>
            </select>
        </div>
    </div>

    <div class="row">
        <!-- Pending Approvals -->
        <div class="col-lg-3 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-header box text-white" >
                    <h5 class="mb-0">Pending Approvals (50)</h5>
                </div>
                <div class="card-body p-2">
                    

                    <div class="overflow-auto" style="max-height:700px;">
                        @for (int i = 0; i < 6; i++)
                        {
                            <div class="card shadow-sm mb-3">
                                <div class="card-body p-3">
                                    <h6 class="text-primary fw-bold">Warehouse A (50)</h6>
                                    
                                    <a href="#" class="btn btn-outline-primary btn-sm">View Details</a>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Menus -->
        <div class="col-lg-9 ">
            <!-- Operation Menus -->
            <div class="mb-4">
                <h4 class="mb-3">Operation Menus</h4>
                <div class="d-flex flex-wrap gap-3">
                    @{
                        string[] menus = { "Warehouse", "Borrower", "Location", "Agency", "State", "Banks", "Commodities" };
                        foreach (var menu in menus)
                        {
                            <div class="card shadow-sm p-3 flex-grow-1" style="width: 220px; transition: transform 0.2s;">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="mb-1">@menu</h6>
                                        <h3 class="text-muted mb-0">100</h3>
                                    </div>
                                    <a href="#" class="btn btn-sm btn-primary">View</a>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>

            <hr />

            <!-- Exposure Menus -->
            <div class="mb-4">
                <h4 class="mb-3">Exposure Menus</h4>
                <div class="d-flex flex-wrap gap-3">
                    @{
                        string[] exposures = { "Warehouse", "Borrower", "Location", "Agency", "State", "Banks", "Commodities" };
                        foreach (var exp in exposures)
                        {
                            <div class="card shadow-sm  p-3 flex-grow-1" style="width: 220px;">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="mb-1">@exp</h6>
                                        <h3 class="text-muted mb-0">100</h3>
                                    </div>
                                    <a href="#" class="btn btn-sm btn-success">View</a>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>

            <hr />

            <!-- Alerts -->
            <div class="mb-4">
                <h4 class="mb-3">Alerts</h4>
                <div class="d-flex flex-wrap gap-3">
                    @{
                        string[] alerts = { "Warehouse", "Borrower", "Location", "Agency", "State", "Banks", "Commodities" };
                        foreach (var alert in alerts)
                        {
                            <div class="card shadow-sm p-3 flex-grow-1" style="width: 220px;">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="mb-1">@alert</h6>
                                        <h3 class="text-muted mb-0">100</h3>
                                    </div>
                                    <a href="#" class="btn btn-sm btn-warning">View</a>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 20px rgba(0,0,0,0.15);
    }
</style>
