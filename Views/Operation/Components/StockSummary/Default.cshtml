<div class="row" style="display:block;overflow:scroll;height:700px;">
    <h5>Stock Report</h5>
    <div class="col-lg-12">
        <table class="table table-bordered table-responsive-lg" id="stockreporttable">
            <thead class="bg-dark text-light">
                <tr>
                    <th scope="col">Sr.No.</th>
                    <th scope="col">State</th>
                    <th scope="col">State Head</th>
                    <th scope="col">AHM/HM</th>
                    <th scope="col">CCM</th>
                    <th scope="col">CM</th>
                    <th scope="col">Warehouse</th>
                    <th scope="col">Stock</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int i = 1;
                }
                @foreach(var item in Model._StockReport)
                {
                    <tr>
                        <td>@i</td>
                        <td>@item.State</td>
                        <td>@item.SH</td>
                        <td>@item.HM</td>
                        <td>@item.CCM</td>
                        <td>@item.CM</td>
                        <td>@item._Warehousename</td>
                        <td>@item.wstock</td>
                    </tr>
                    i++;
                }

            </tbody>
        </table>
    </div>
</div>



