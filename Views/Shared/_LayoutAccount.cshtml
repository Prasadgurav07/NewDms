<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NewDms</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/NewDms.styles.css" asp-append-version="true" />

    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg  shadow header sticky-lg-top">
        <div class="container-fluid">
            <img src="~/logos/ICCLOGO1.png" alt="Logo" width="30" height="30" class="d-inline-block align-text-top">

            <a class="navbar-brand" href="#">New DMS</a>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active text-decoration-none text-black" aria-current="page" asp-controller="Operation" asp-action="Dashboard">Operation</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active text-decoration-none text-black" aria-current="page" asp-controller="Audit" asp-action="Dashboard">Audit</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active text-decoration-none text-black" aria-current="page" asp-controller="Hr" asp-action="Dashboard">Hr</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active text-decoration-none text-black" aria-current="page" asp-controller="Account" asp-action="Dashboard">Account</a>
                    </li>
                </ul>
            </div>

            <div class="dropdown ms-auto">
                <button class="btn btn-secondary dropdown-toggle" type="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                    User
                </button>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                    <li><a class="dropdown-item" href="#">Profile</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item" href="#">Sign Out</a></li>
                </ul>
            </div>
        </div>
    </nav>



    <div class="container-fluid bg-light p-2">
        <div class="row bg-light p-2" style="position:sticky;top:50px;z-index:1;">
            <div class="col-lg-12">
                <ul class="nav nav-tabs">
                    <li class="nav-item">
                        <h4 class="mb-0 me-5">Account</h4>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-decoration-none text-black" aria-current="page" asp-controller="Operation" asp-action="Dashboard">Dashboard</a>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-decoration-none text-black" data-bs-toggle="dropdown" href="#" role="button" aria-expanded="false">Reports</a>
                        <ul class="dropdown-menu shadow">
                            <li><a class="dropdown-item" href="#">Action</a></li>
                            <li><a class="dropdown-item" href="#">Another action</a></li>
                            <li><a class="dropdown-item" href="#">Something else here</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="#">Separated link</a></li>
                        </ul>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-decoration-none text-black" data-bs-toggle="dropdown" href="#" role="button" aria-expanded="false">Others</a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#">Action</a></li>
                            <li><a class="dropdown-item" href="#">Another action</a></li>
                            <li><a class="dropdown-item" href="#">Something else here</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="#">Separated link</a></li>

                        </ul>
                    </li>


                    <li class="nav-item dropdown">
                        <a class="nav-link  dropdown-toggle text-decoration-none text-danger" data-bs-toggle="dropdown" href="#" role="button" aria-expanded="false">Alerts</a>
                        <ul class="dropdown-menu">
                            <li>
                                <select class="form-select">
                                    <option value="1">All CCM</option>
                                    <option value="1">Maharshtra</option>
                                    <option value="2">Rajsthan</option>
                                    <option value="3">Gujrat</option>
                                </select>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>


        <div class="row p-2">
            <div class="col-lg-2">
                <div class="mb-4">
                    <div class="gap-1">
                        @{
                            string[] menus = { "Warehouse", "Borrower", "Location", "Agency", "Insurance", "Banks", "Commodities", "SR", "QC" };
                            foreach (var menu in menus)
                            {
                                <a class="text-decoration-none text-black" asp-controller="@menu" asp-action="Index" target="content">
                                    <div class="card gap-1 mb-2" style="width:95%;">
                                        <div class="d-flex justify-content-between align-items-start p-1">
                                            <b>@menu</b>
                                            <span class="btn btn-danger p-1" style="font-size:10px;">50</span>
                                        </div>
                                        <div class="p-1">
                                            <h6>100</h6>
                                        </div>

                                    </div>
                                </a>
                            }
                        }
                    </div>
                </div>
            </div>
            <div class="col-lg-10 border border-light p-2">
                @RenderBody()
            </div>

        </div>




    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", false)
</body>
</html>
