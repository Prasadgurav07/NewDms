@{
    ViewData["Title"] = "Home Page";
}


<div class="d-flex justify-content-center align-items-center vh-100">
    <form class="p-4 border rounded shadow" style="min-width: 300px;">
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">User Name</label>
            <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
        </div>
        <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label">User Password</label>
            <input type="password" class="form-control" id="exampleInputPassword1">
        </div>
        <button class="btn btn-primary"><a class="nav-link text-decoration-none text-white" asp-controller="Operation" asp-action="Dashboard">Submit</a></button>
    </form>
</div>
